---
import type { Class } from "../data/types";

interface Props {
  semesterCurriculum: Class[];
}

const { semesterCurriculum } = Astro.props;
---

<div class="mt-4 flex min-h-[30rem] flex-col gap-5 rounded-lg bg-beige px-3 py-6 sm:gap-3 sm:px-5">
  {
    semesterCurriculum.map((semesterClass) => (
      <a
        href={semesterClass.link}
        target="_blank"
        rel="noreferrer"
        class="flex items-center gap-2 leading-tight hover:underline xs:text-lg">
        <span class="flex-shrink-0">
          <img src="/images/document-icon.svg" alt="text document icon" width="35" height="35" />
        </span>
        <span>{semesterClass.title}</span>
      </a>
    ))
  }
</div>
